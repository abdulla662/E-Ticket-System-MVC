@model E_Ticket_System.Models.ViewModel.MovieWithDetailVM

<h2 class="p-5 text-center fw-bold" style="font-size: 2rem;">Create New Movie</h2>

<form asp-action="create" method="post">
    <div class="form-group mb-3">
        <label asp-for="Movie.Name"></label>
        <input asp-for="Movie.Name" class="form-control" placeholder="Enter movie name" required>
        <span asp-validation-for="Movie.Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Movie.Description"></label>
        <textarea asp-for="Movie.Description" class="form-control" placeholder="Enter movie description" required></textarea>
        <span asp-validation-for="Movie.Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Movie.Price"></label>
        <input asp-for="Movie.Price" type="number" class="form-control" required>
        <span asp-validation-for="Movie.Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Movie.ImgUrl"></label>
        <input asp-for="Movie.ImgUrl" class="form-control">
    </div>

    <div class="form-group mb-3">
        <label asp-for="Movie.TrailerUrl"></label>
        <input asp-for="Movie.TrailerUrl" class="form-control">
    </div>

    <div class="form-group mb-3">
        <label asp-for="Movie.StartDate"></label>
        <input asp-for="Movie.StartDate" type="date" class="form-control" required>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Movie.EndDate"></label>
        <input asp-for="Movie.EndDate" type="date" class="form-control" required>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Movie.CategoryId"></label>
        <select asp-for="Movie.CategoryId" class="form-control">
            <option>-- Select a Category --</option>
            @foreach (var category in Model.Categories)
            
            {
                <option value="@category.Id">@category.Name</option>

            }
       
        </select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Movie.CinemaId"></label>
        <select asp-for="Movie.CinemaId" class="form-control">
            <option>-- Select a Cinema --</option>
            @foreach (var cinema in Model.Cinemas)
            
            {
                <option value="@cinema.Id">@cinema.Name</option>

            }
        </select>
    </div>

    <div class="form-group mb-3">
        <label>Select Actors</label>
        <select asp-for="SelectedActors" multiple class="form-control">
            @foreach (var item in Model.Actors)
            {
                <option value="@item.Id">@item.FirstName</option>

            
            }

        </select>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a href="/Movies" class="btn btn-secondary">Back to List</a>
</form>
