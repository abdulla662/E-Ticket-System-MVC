@model IEnumerable<E_Ticket_System.Models.Cinema>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cinema Categories</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-white">

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary p-3">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">Movie Point</a>
            <button class="btn btn-warning fw-bold" onclick="toggleCategories()">Cinemas</button>
        </div>
    </nav>

    <!-- Movie Categories (Initially Hidden) -->
    <div id="categories" class="container mt-5 d-none text-center">
        <h2 class="text-warning fw-bold mb-3">Cinema Categories</h2>
        <ul class="list-group">
            @foreach (var item in Model)

            {
                <a href="/Customer/Cinema/CinemaMovie?id=@item.Id"
                   class="list-group-item bg-secondary text-white">
                    @item.Name
                </a>
            }

        </ul>
    </div>

    <!-- Bootstrap 5 JavaScript & Custom Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleCategories() {
            let categoryDiv = document.getElementById('categories');
            categoryDiv.classList.toggle('d-none');
        }
    </script>

</body>
</html>
